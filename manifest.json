{
  "manifest_version": 3,
  "name": "Markdown Title Copier",
  "version": "1.0.0",
  "description": "Copy page title in markdown format with keyboard shortcut",
  "permissions": ["activeTab", "clipboardWrite"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "commands": {
    "copy-title": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Copy page title in markdown format"
    }
  }
} 
